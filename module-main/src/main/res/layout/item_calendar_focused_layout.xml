<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/item_calendar_focused_layout"
            android:gravity="center"
            android:layout_marginLeft="@dimen/tool_margin_dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/item_calendar_focused_card2"
            app:layout_constraintTop_toTopOf="@+id/item_calendar_focused_card2">

            <TextView
                android:id="@+id/item_calendar_focused_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:26"
                android:textSize="13dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/item_calendar_focused_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:19"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />


        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_calendar_focused_card"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="60dp"
            android:background="@color/purple_700"
            app:cardBackgroundColor="@color/purple_700"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="@id/item_calendar_focused_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_calendar_focused_layout" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_calendar_focused_card2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/tool_margin_dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toRightOf="@id/item_calendar_focused_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/item_calendar_focused_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待办"
                    android:textColor="@color/purple_700"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/item_calendar_focused_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="待办"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/item_calendar_focused_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="1分钟"
                    android:textColor="@color/black"
                    android:textSize="12dp" />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>