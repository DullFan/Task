<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_drawer_layout_rv_card"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/main_drawer_select_color"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_drawer_layout_rv_img"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/main_drawlayout_project_img"
                    app:tint="@color/purple_700" />

                <TextView
                    android:id="@+id/item_drawer_layout_rv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="项目"
                    android:textColor="@color/purple_700"
                    android:textSize="17sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_drawer_layout_rv_select_line"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/purple_700"
            android:layout_width="3dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>