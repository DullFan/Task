<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="infoViewModel"
            type="com.dullfan.module_main.viewmodel.InfoViewModel" />

        <variable
            name="homeViewModel"
            type="com.dullfan.module_main.viewmodel.HomeViewModel" />
        <variable
            name="fragmentActivity"
            type="androidx.fragment.app.FragmentActivity" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:orientation="vertical"
            android:paddingBottom="@dimen/tool_margin_dp"
            tools:context=".ui.info.InFoFragment">

            <TextView
                android:id="@+id/info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tool_margin_dp"
                android:text="@string/info_title_string"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/tool_margin_dp"
                app:cardCornerRadius="@dimen/tool_card_cardCornerRadius_dp"
                app:cardElevation="@dimen/card_cardElevation_dp"
                app:layout_constraintBottom_toBottomOf="@+id/info_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/info_title">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="设置"
                    android:padding="7dp"
                    android:src="@drawable/info_setting" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tool_margin_dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/tool_margin_dp"
                app:cardCornerRadius="@dimen/tool_card_cardCornerRadius_dp"
                app:cardElevation="@dimen/card_cardElevation_dp"
                app:layout_constraintTop_toBottomOf="@+id/info_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/tool_margin_dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/tool_margin_dp"
                        app:cardBackgroundColor="@color/background_color"
                        app:cardCornerRadius="@dimen/tool_card_cardCornerRadius_dp"
                        app:cardElevation="@dimen/card_cardElevation_dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/info_edit_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:contentDescription="编辑"
                            android:onClickListener="@{()->infoViewModel.editOnClick(fragmentActivity)}"
                            android:padding="7dp"
                            android:src="@{infoViewModel.whetherToEditFlag ? @drawable/info_finish : @drawable/info_edit}" />

                    </androidx.cardview.widget.CardView>

                    <com.dullfan.base.view.RoundProgress
                        android:id="@+id/info_round_progress"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_margin="@dimen/tool_margin_dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:max="100"
                        app:roundColor="@color/background_color"
                        app:roundProgressColor="@color/purple_500"
                        app:roundWidth="3dp" />

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:id="@+id/info_avatar"
                        android:layout_width="60dp"
                        android:scaleType="centerCrop"
                        android:layout_height="60dp"
                        android:src="@drawable/rv_img7"
                        app:layout_constraintBottom_toBottomOf="@+id/info_round_progress"
                        app:layout_constraintLeft_toLeftOf="@id/info_round_progress"
                        app:layout_constraintRight_toRightOf="@+id/info_round_progress"
                        app:layout_constraintTop_toTopOf="@id/info_round_progress"
                        app:roundPercent="1" />

                    <TextView
                        android:id="@+id/info_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="5dp"
                        android:text="@={infoViewModel.userNameString}"
                        android:enabled="@{infoViewModel.whetherToEditFlag}"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/info_round_progress" />

                    <View
                        android:id="@+id/info_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/ingo_line_color"
                        app:layout_constraintTop_toBottomOf="@id/info_username" />


                    <TextView
                        android:id="@+id/info_main_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/info_main_information_string"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/info_line" />

                    <TextView
                        android:id="@+id/info_username_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="10dp"
                        android:text="用户名"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/info_main_information" />

                    <EditText
                        android:id="@+id/info_username_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="5dp"
                        android:text="@={infoViewModel.userNameString}"
                        android:background="@drawable/info_edit_frame"
                        android:enabled="@{infoViewModel.whetherToEditFlag}"
                        android:hint="用户名"
                        android:padding="10dp"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/info_username_information" />


                    <TextView
                        android:id="@+id/info_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="10dp"
                        android:text="职位"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/info_username_edit" />

                    <EditText
                        android:id="@+id/info_position_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="5dp"
                        android:text="@={infoViewModel.positionString}"
                        android:background="@drawable/info_edit_frame"
                        android:enabled="@{infoViewModel.whetherToEditFlag}"
                        android:hint="职位信息"
                        android:padding="10dp"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/info_position" />

                    <TextView
                        android:id="@+id/info_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="10dp"
                        android:text="手机号"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/info_position_edit" />

                    <EditText
                        android:id="@+id/info_phone_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/info_edit_frame"
                        android:enabled="@{infoViewModel.whetherToEditFlag}"
                        android:hint="手机号"
                        android:padding="10dp"
                        android:text="@={infoViewModel.phoneString}"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/info_phone" />


                    <TextView
                        android:id="@+id/info_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="10dp"
                        android:text="Email"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/info_phone_edit" />

                    <EditText
                        android:id="@+id/info_email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tool_margin_dp"
                        android:layout_marginTop="5dp"
                        android:text="@={infoViewModel.emailString}"
                        android:background="@drawable/info_edit_frame"
                        android:enabled="@{infoViewModel.whetherToEditFlag}"
                        android:hint="Email"
                        android:padding="10dp"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/info_email" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>